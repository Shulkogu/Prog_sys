<UserControl x:Class="EasySave_GUI.ListView.ViewList"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:EasySave_GUI.ListView"
             mc:Ignorable="d">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        
        <Grid Grid.Row="0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <StackPanel Grid.Column="0">
                <Label> Name </Label>
                <TextBox Text="{Binding SelectedBackup.Name, UpdateSourceTrigger=PropertyChanged}" Margin="12 0 12 12"/>
            </StackPanel>
            <StackPanel Grid.Column="1">
                <TextBox IsReadOnly="True" x:Name="SourceText" Text="{Binding SelectedBackup.Source, UpdateSourceTrigger=PropertyChanged}" Margin="12 0 12 12"/>
                <Button Margin="12,0,12,12" Content="Source" Command="{Binding SourceCommand, UpdateSourceTrigger=PropertyChanged}"></Button>
            </StackPanel>
            <StackPanel Grid.Column="2">
                <TextBox IsReadOnly="True" x:Name="TargetText" Text="{Binding SelectedBackup.Target}" Margin="12 0 12 12"/>
                <Button Margin="12,0,12,12" Content="Target" Command="{Binding TargetCommand}"></Button>
            </StackPanel>
            <StackPanel Grid.Column="3">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition/>
                        <ColumnDefinition/>
                    </Grid.ColumnDefinitions>
                    <Button Grid.Column="0" x:Name="addBtn" Command="{Binding AddCommand}" Margin="12,0,12,12" Background="#5BB450" Content="Add"></Button>
                    <Button Grid.Column="1" x:Name="deleteBtn" Command="{Binding RemoveCommand}" Margin="12,0,12,12" Background="#ED4437" Content="Delete"></Button>
                </Grid>
                <Button x:Name="sendBtn" Command="{Binding SendCommand}" Margin="12,0,12,12" Content="Send"></Button>
            </StackPanel>
        </Grid>
            <!-- ListView avec style GridView pour afficher la liste -->
            <ListView Grid.Row="1" x:Name="ItemListView" Background="#EDEBD7">
                <ListView.View>
                    <GridView>
                        <GridViewColumn Header="Date" DisplayMemberBinding="{Binding Propriete3}"/>
                        <GridViewColumn Header="Sauvegarde" DisplayMemberBinding="{Binding Propriete1}"/>
                        <GridViewColumn Header="Status" DisplayMemberBinding="{Binding Propriete2}"/>
                        <GridViewColumn Header="Taille" DisplayMemberBinding="{Binding Propriete4}"/>
                        <GridViewColumn Header="Chemin" DisplayMemberBinding="{Binding Propriete5}"/>
                    </GridView>
                </ListView.View>
            </ListView>
    </Grid>
</UserControl>
